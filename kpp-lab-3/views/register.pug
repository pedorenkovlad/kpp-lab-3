extends layout

block content
    .d-flex.justify-content-center
        .col-md-6
            h1.text-center Register
            form(action="/register" method="POST")
                .form-group
                    label(for="email") Email address
                    input.form-control#email(type="email" placeholder="Enter email" name="email")
                .form-group
                    label(for="name") Name
                    input.form-control#name(type="text" placeholder="Enter Name" name="name")
                .form-group
                    label(for="password") Password
                    input.form-control#password(type="password" placeholde="Password" name="password")
                .form-group
                    label(for="confirmPassword") Confirm password
                    input.form-control#confirmPassword(type="password" placeholde="Confirm password" name="confirmPassword")
                .d-flex.justify-content-center
                    button.btn.btn-info(type="submit") Register